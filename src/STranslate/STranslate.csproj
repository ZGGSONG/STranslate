      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="inference\japan_PP-OCRv3_rec_infer\inference.pdmodel">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="inference\korean_dict.txt">
